<Window x:Class="TestApplication.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow"
        AutomationProperties.AutomationId="CUI_TestApplication_MainWindow"
        Height="350"
        Width="525">

    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
        <Button Content="ColorDetectorTests" AutomationProperties.AutomationId="CUI_ColorDetectorTests_Button" Click="ColorDetectorTests_Button_OnClick" />
        <Button Content="KeyboardExTests" AutomationProperties.AutomationId="CUI_KeyboardExTests_Button" Click="KeyboardExTests_Button_OnClick" />
        <Button Content="MouseExTests" AutomationProperties.AutomationId="CUI_MouseExTests_Button" Click="MouseExTests_Button_OnClick" />
        <Button Content="WindowFocusTests" AutomationProperties.AutomationId="CUI_WindowFocusTests_Button" Click="WindowFocusTests_Button_OnClick" />
        <Button Content="Show MessageBox" AutomationProperties.AutomationId="CUI_ShowMessageBox_Button" Click="ShowMessageBox_Button_OnClick" />
    </StackPanel>
    
</Window>
