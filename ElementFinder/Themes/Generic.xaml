<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:ElementFinder="clr-namespace:ElementFinder">

    <Style TargetType="{x:Type ElementFinder:CopyableTextBox}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type ElementFinder:CopyableTextBox}">
                    <DockPanel>
                        <Button DockPanel.Dock="Right" Content="c" Padding="4,0" VerticalAlignment="Center" x:Name="PART_CopyButton" ToolTip="{TemplateBinding CopyButtonToolTip}" />
                        <TextBox Text="{TemplateBinding Text}" IsReadOnly="True" />
                    </DockPanel>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    
</ResourceDictionary>
